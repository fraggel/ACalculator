<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VisorImagenesFTP"
    android:id="@+id/layoutImagenes">

    <es.fraggel.acalculator.TouchImageView
        android:id="@+id/imageViewFTP"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:src="@android:color/transparent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingActionButtonFTP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:onClick="btn_Click"
        android:layout_gravity="bottom|right"
        app:srcCompat="@android:drawable/ic_menu_always_landscape_portrait" />

</FrameLayout>